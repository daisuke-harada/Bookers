<div class="body">
  <div class="container">
		<p id="notice">Signed in successfully</p>
		<div class="row">
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table">
					<tbody>
						<tr>
							<td>
								<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
								<br>
								<%= link_to @book.user.name, user_path(@book.user.id) %>
							</td>
							<td>
								<%= @book.title %>
							</td>
							<td>
								<%= @book.body %>
							</td>
							<% if @book.user == current_user %>
					        <td><%= link_to "edit", edit_user_path(@book.id) %></td>
					        <% else %>
					        <td></td>
					        <% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
  </div>
</div>