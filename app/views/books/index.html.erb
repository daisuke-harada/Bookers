<%= render 'layouts/navbar' %>

<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>
<div class="body">
  <div class="container">
		<p id="notice">Signed in successfully</p>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
                <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= current_user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<%= link_to "edit", edit_user_path(current_user.id) %>
				</div>

				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
				<div class="field row">
					<%= f.label :title, "Title" %>
					<%= f.text_field :title %>
				</div>
				<div class="field row">
					<%= f.label :body, "Opinion" %>
					<%= f.text_area :body %>
				</div>
				<div class="action row">
					<%= f.submit "Create book" %>
				</div>

				<% end %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Titile</th>
							<th>Opinion</th>
							<th clospan="3"></th>
						</tr>
					</thead>
					<tbody>
					  <% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg' %></td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					  <% end %>
					</tbody>
				</table>
			</div>
		</div>
  </div>
</div>
