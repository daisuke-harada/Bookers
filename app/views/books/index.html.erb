<div class="row">

<% if @bookpost.errors.any? %>
  <div id="error_explanation">
    <h2><%= @bookpost.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @bookpost.errors.full_messages.each do|message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

  <div class="col-xs-3">
    <h2>User info</h2>
      <%= attachment_image_tag curent_user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
	<table class="table">
	  <tbody>
	    <tr>
		  <th>name</th>
		    <th><%= current_user.name %></th>
		  </tr>
		  <tr>
		    <th>introduction</th>
			<th><%= current_user.introduction %></th>
		  </tr>
      </tbody>
	</table>
	<div class="row">
	  <%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
	</div>
    <h2>New book</h2>
	  <%= form_for(@bookpost) do |f| %>
	    <div class="field row">
		  <%= f.label :title, "Title" %>
		  <br>
		  <%= f.text_field :title %>
		</div>
		<div class="field row">
		  <%= f.label :body, "Opinion" %>
		  <br>
		  <%= f.text_area :body %>
		</div>
		<div class="action row">
		  <%= f.submit "Create book", class:"btn btn-primary col-xs-12" %>
		</div>

	  <% end %>
  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
  <table class="table">
    <thead>
	  <tr>
	    <th></th>
		<th>Titile</th>
		<th>Opinion</th>
		<th clospan="3"></th>
	  </tr>
	</thead>
	<tbody>
	  <% @books.each do |book| %>
	    <tr>
		  <td>
		  	<%= link_to user_path(book.user.id) do %>
		  	  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
		  	<% end %>
		  </td>
		  <td><%= link_to book.title, book_path(book.id) %></td>
		  <td><%= book.body %></td>
		</tr>
	  <% end %>
	</tbody>
  </table>
  </div>
</div>

