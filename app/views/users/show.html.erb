<%= render 'layouts/navbar' %>

<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<div class="body">
	  <div class="container">
		<p id="notice">Signed in successfully</p>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<% if @user == current_user %>
					  <%= link_to "edit", edit_user_path(current_user.id) %>
					<% else %>
					  <%= link_to "my_page", user_path(current_user.id) %>
					<% end %>
				</div>
				<h2>New book</h2>
			</div>
			<div class="col-xs-3">
			</div>
		   </div>
		</div>
      </div>
